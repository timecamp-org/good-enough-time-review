{
  "manifest_version": 3,
  "name": "Calendar Events Analyzer",
  "author": "Kamil Rudnicki (TimeCamp)",
  "homepage_url": "https://www.timecamp.com",
  
  "version": "1.0",
  "description": "Upload and analyze calendar CSV files with event name cleanup",
  "permissions": ["storage"],
  "action": {
    "default_icon": {
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["templates/*", "html2pdf.bundle.min.js", "html2canvas.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 